---
permalink: /sitemap.xml
sitemapIgnore: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for item in collections.all %}
{%- if item.data.sitemapIgnore != true %}
  <url>
    <loc>{{ metadata.url }}{{ item.url | httpUrl }}</loc>
    <lastmod>{{ item.date | date: '%Y-%m-%d' }}</lastmod>
    <changefreq>{%- if item.data.changefreq -%}{{ item.data.changefreq }}{%- else -%}monthly{%- endif -%}</changefreq>
    <priority>{%- if item.data.priority -%}{{ item.data.priority }}{%- else -%}0.5{%- endif -%}</priority>
  </url>
{%- endif %}
{%- endfor %}
</urlset>